$('.trail').click(function() {
 	$('.square').unbind();
 	
	$('#wrapper').css("background-color", "black");
	$('.square').hover(function() {
		$(this).css('opacity', 0);
	}, function(){
		$(this).fadeTo('fast', 1);
 	});
});

