function makeGrid(numSquares) {
	var numSquares = x;
	var squareSize = (900/x)

	for (var i = 0; i < x * x; i++){
		$('#wrapper').prepend("<div class='square' />");
	}

	$(".square").width(squareSize);
	$(".square").height(squareSize);

}

function boxSize(width) {
	var totalWidth = $(".wrapper").width();
	return Math.floor(100 * totalWidth/ width) / 100 - 2;
}

var gridSize = boxSize(numSquares);

$('.square').css({
	'width': gridSize + "px", 
	'height': gridSize + "px"
	});

